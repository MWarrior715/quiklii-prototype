# =================================
# QUIKLII BACKEND - Variables de Entorno
# =================================

# Servidor
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quiklii_db
DB_USERNAME=quiklii_user
DB_PASSWORD=quiklii_password

# JWT (JSON Web Tokens)
JWT_SECRET=quiklii_super_secret_key_2024_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis (Cache y Sesiones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=quiklii_redis_password

# Rate Limiting
RATE_LIMIT_MAX=100

# Uploads
MAX_UPLOAD_SIZE=10mb
UPLOAD_DESTINATION=./uploads

# =================================
# INTEGRACIONES DE PAGOS
# =================================

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# PayU
PAYU_API_KEY=your_payu_api_key
PAYU_MERCHANT_ID=your_payu_merchant_id

# =================================
# NOTIFICACIONES
# =================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =================================
# SERVICIOS EXTERNOS
# =================================

# Google Maps (para geolocalizaci√≥n)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase (para notificaciones push)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
